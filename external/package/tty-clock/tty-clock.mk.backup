################################################################################
#
# tty-clock
#
################################################################################

TTY_CLOCK_VERSION = 2.3
TTY_CLOCK_SITE = $(call github,xorg62,tty-clock,v$(TTY_CLOCK_VERSION))
TTY_CLOCK_LICENSE = BSD-3-Clause
TTY_CLOCK_LICENSE_FILES = LICENSE
TTY_CLOCK_DEPENDENCIES = host-pkgconf ncurses

define TTY_CLOCK_BUILD_CMDS
	$(MAKE) $(TARGET_MAKE_ENV) $(TARGET_CONFIGURE_OPTS) $(TARGET_CONFIGURE_ARGS) -C $(@D) tty-clock
endef

define TTY_CLOCK_INSTALL_TARGET_CMDS
	$(MAKE) $(TARGET_MAKE_ENV) $(TARGET_CONFIGURE_OPTS) $(TARGET_CONFIGURE_ARGS) -C $(@D) install DESTDIR="$(TARGET_DIR)"
endef

$(eval $(generic-package))
